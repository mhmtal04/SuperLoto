# Adım 2: Tekil sayı olasılıkları ve sayı çiftlerinin frekansları hesaplanıyor

def single_number_probabilities(df):
    freq = pd.Series(0, index=range(1,61), dtype=float)
    total_counts = 0

    for numbers in df['Numbers']:
        for n in numbers:
            freq[n] += 1
            total_counts += 1

    return freq / total_counts  # Her sayının çıkma olasılığı

def pair_frequencies(df):
    pair_freq = pd.DataFrame(0, index=range(1,61), columns=range(1,61), dtype=float)

    for numbers in df['Numbers']:
        for a, b in combinations(numbers, 2):
            pair_freq.at[a, b] += 1
            pair_freq.at[b, a] += 1  # Simetrik

    return pair_freq

# Hesapla
single_prob = single_number_probabilities(df)
pair_freq = pair_frequencies(df)

print("✅ Tekil sayı olasılıkları ve ikili frekanslar hesaplandı.")
print(single_prob.head(10))
