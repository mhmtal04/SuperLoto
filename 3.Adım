# Adım 3: Koşullu olasılıkları hesapla (bir sayının çıkması durumunda diğer sayının çıkma olasılığı)

def conditional_probabilities(single_prob, pair_freq):
    cond_prob = pd.DataFrame(0, index=range(1,61), columns=range(1,61), dtype=float)

    for a in range(1, 61):
        if single_prob[a] > 0:
            cond_prob.loc[a] = pair_freq.loc[a] / single_prob[a]
        else:
            cond_prob.loc[a] = 0  # Eğer a hiç çıkmamışsa 0 olasılık

    return cond_prob

cond_prob = conditional_probabilities(single_prob, pair_freq)
print("✅ Koşullu olasılıklar hesaplandı.")
print(cond_prob.iloc[:5, :5])
